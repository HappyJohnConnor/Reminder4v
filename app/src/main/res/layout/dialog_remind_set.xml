<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="com.example.author.reminder4v.RemindSetDialogFragment">

    <Spinner
        android:id="@+id/date_spin"
        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:entries="@array/date_list" />

    <Spinner
        android:id="@+id/time_spin"
        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date_spin"
        android:layout_marginTop="10dp"
        android:entries="@array/time_list" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time_spin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/delete_date_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:background="@android:color/transparent"
            android:text="削除" />

        <Button
            android:id="@+id/cancel_date_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/delete_date_btn"
            android:layout_toRightOf="@+id/delete_date_btn"
            android:background="@android:color/transparent"
            android:text="キャンセル" />

        <Button
            android:id="@+id/save_date_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/cancel_date_btn"
            android:layout_toRightOf="@+id/cancel_date_btn"
            android:background="@android:color/transparent"
            android:text="保存" />

    </LinearLayout>

</RelativeLayout>
